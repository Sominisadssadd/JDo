<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topAppBar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_margin="10dp"
    android:background="@drawable/top_app_bar_shape_background"
    android:clipToPadding="false"
    android:elevation="4dp"
    android:orientation="horizontal">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/top_app_bar_burger_menu_icon" />

    <TextView
        android:id="@+id/textViewTitleTopAppBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:fontFamily="@font/cartoon_font"
        android:textSize="26sp"
        tools:text="SomeText" />

    <ImageView
        android:id="@+id/notificationButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:src="@drawable/top_app_bar_notification_icon" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:src="@drawable/top_app_bar_settings_icon" />


</LinearLayout>